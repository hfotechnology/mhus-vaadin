			</element>
		  </layout>
		</composite>
		<composite>
		  <layout>
			<element type='text' nls='text1' name='text2'>
				<data name='text1'/>
			</element>
		  </layout>
		</composite>
	  </layout>
	</split>
  </layout>
</root>